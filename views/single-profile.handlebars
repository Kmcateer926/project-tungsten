{{> header}}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>{{firstName}} {{lastName}}</h1>
<p>Reach me at: {{email}} or {{phone}}</p>
</div>
</div>
</div>

<input type="hidden" value={{profileId}} id="profileId" />


<div class="container">
    <div class="row">
        <h1>Available Tools to Add</h1>
    </div>
    <div class="row">
        {{#each availableTools}}
        <div class="col-sm-12">
            <h3>{{name}}</h3>
            <button class="btn btn-primary" data-toolId="{{id}}">{{name}}</button>
        </div>
        {{/each}}
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $(".btn-primary").on("click", function () {
            console.log("Profile Id: ", $("#profileId").val());
            console.log("Tool Id: ", $(this).attr("data-toolId"));
            $.ajax({
                method: "POST",
                url: "/usertools",
                data: {
                    profileId: $("#profileId").val(),
                    toolId: $(this).attr("data-toolId")
                }
            })
        })
    })
</script>