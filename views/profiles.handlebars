{{> header}}
<div class="columns">
    <div class="column">
        <div class="profileHolder">
            {{#each profiles}}
            <h1>{{firstName}} {{lastName}}</h1>
            <h2>I live in {{cityName}}</h2>
            <p>Reach me at: {{email}}</p>
            <button class="btn btn-danger delete-profile" data-id="{{id}}">Delete</button>
            <a href="/profiles/{{id}}/edit"><button class="btn btn-secondary">Edit</button></a>
            {{/each}}

        </div>
    </div>
</div>
{{> footer}}

<script>
    $(document).ready(function () {
        $(".delete-profile").on("click", function () {
            const id = $(this).data("id");
            $.ajax({
                method: "DELETE",
                url: `/api/profiles/${id}`
            }).then(response => {
                window.location.reload();
            })
        })
    })
</script>